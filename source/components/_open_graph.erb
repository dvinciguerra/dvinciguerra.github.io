<meta property="og:type" content="article">
<meta property="og:url" content="<%= current_article.url %>">
<meta property="og:title" content="<%= current_article.title %>">
<meta property="og:site_name" content="<%= data.settings.blog.title %>">
<meta property="og:description" content="<%= current_article.body.slice(0, 200).gsub(/<[^>]*>/, '').split('.').first %>...">
<meta property="og:image" content="<%= image_path('avatar.jpg') %>">

