---
pageable: true
per_page: 10
layout: blog
---

<% content_for :heading do %>
  <%= partial("components/heading") %>
<% end %>

<div class="-my-8 divide-y-2 divide-gray-800">
  <% page_articles.each_with_index do |article, i| %>
    <%= partial "components/article_item", locals: { article: article, index: i } %>
  <% end %>
</div>

<%= partial "components/pagination", locals: { pageable: @pageable } %>
