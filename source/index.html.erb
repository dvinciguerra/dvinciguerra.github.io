---
pageable: true
per_page: 10
layout: blog
---

<% content_for :heading do %>
  <%= partial('components/heading') %>
<% end %>

<div class="-my-8 divide-y-2 divide-gray-800">
  <% page_articles.each_with_index do |article, i| %>
    <div class="py-8 flex flex-wrap md:flex-nowrap">
      <div class="w-full sm:w-2/12 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
        <span class="font-semibold title-font text-white uppercase"><%= article.data.category %></span>
        <span class="mt-1 text-gray-500 text-sm"><%= article.date.strftime('%d %b %Y') %></span>
      </div>
      <div class="md:flex-grow">
        <a href="<%= article.url %>" class='no-underline text-2xl font-medium text-white title-font mb-2'>
          <%= article.title %>
        </a>
        <p class="leading-relaxed text-balance">
          <% article.tags.each do |tag| %>
            <span class="rounded-lg py-1 px-2 bg-gray-700 text-gray-50 text-xs"><%= tag %></span>&nbsp;
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="flex mt-12 float-right">
    <% if paginate && num_pages >= 1 %>
      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page, class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white mr-2' %></p>
      <% else %>
        <p><%= link_to 'Previous page', '', disabled: 'true', class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-500 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-400 dark:hover:bg-gray-500 dark:hover:text-white mr-2' %></p>
      <% end %>
    <% end %>


    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page, class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white mr-2' %></p>
      <% else %>
        <p><%= link_to 'Next page', '', disabled: 'true', class: 'flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-500 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-400 dark:hover:bg-gray-500 dark:hover:text-white mr-2' %></p>
      <% end %>
    <% end %>

    <%# <p> %>
    <%#   <small>Page <%= page_number %1> of <%= num_pages %1></small> %>
    <%# </p> %>
  </div>
</div>

